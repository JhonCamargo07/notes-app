{{#if success_msg}}
	<div
		class='alert alert-success d-flex w-100 z-10 justify-content-between align-items-center alert-dismissible fade show mt-3'
		role='alert'
	>
		<span>
			{{success_msg}}
		</span>
		<button type='button' class='bg-transparent fw-bold border-0' data-bs-dismiss='alert' aria-label='Close'><i
				class='fa-solid fa-xmark'
			></i></button>
	</div>
{{/if}}