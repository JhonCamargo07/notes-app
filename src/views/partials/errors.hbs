{{#each errors}}
	<div
		class='alert alert-danger d-flex w-100 z-10 justify-content-between align-items-center alert-dismissible fade show mt-3'
		role='alert'
	>
		<span>
			{{text}}
		</span>
		<button type='button' class='bg-transparent fw-bold border-0' data-bs-dismiss='alert' aria-label='Close'><i
				class='fa-solid fa-xmark'
			></i></button>
	</div>
{{/each}}

